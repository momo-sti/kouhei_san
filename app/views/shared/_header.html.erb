<%= stylesheet_link_tag 'header' %>

<header>
    <h1 class="text-lg">
        <%= link_to root_path do %>
            <%= image_tag('toplogo4.png') %>
        <% end %>

    </h1>
    <div class="back">
        <% if content_for?(:back_path) %>
            <%= link_to raw('<i class="fa-solid fa-angle-left fa-2xl" style="color: #8c0327;"></i>'), content_for(:back_path) %>
        <% end %>

    </div>
    <div class="subtitle">
        <h1 class="text-xl"><%= content_for?(:title) ? yield(:title) : "デフォルトのタイトル" %></h1>
    </div>

    <% if current_page?(extras_path) %>
        <button id="edit-toggle-button",  class="btn btn-sm btn-outline btn-primary">編集</button>
    <% end %>
    
    <nav class="login">
        <ul>
            <li><a href="#">使い方</a></li>
            <%# <li><a href="#">ログイン</a></li> %>
        </ul>
    </nav>
</header>
