<%= turbo_stream.update "extra_category_#{@extra.id}" do %>
  <%= @extra.category %>
<% end %>

<%= turbo_stream.update "extra_amount_#{@extra.id}" do %>
  <%= @extra.amount %><%= t('common.yen') %>
<% end %>

<%= turbo_stream.update "total_amount" do %>
  <%= display_number(@total_amount) %><%= t('common.yen') %>
<% end %>

<%= turbo_stream.update "split-container-wrapper" do %>
  <%= render partial: 'splits/form', locals: { total_amount: @total_amount } %>
<% end %>

<%= turbo_stream.update "js-placeholder" do %>
  <script>
    setTimeout(function() {
      window.setupSplitAmountUpdater();
    }, 0);
  </script>
<% end %>

<%= turbo_stream.update "js-placeholder" do %>
  <script>
    document.getElementById("my_modal_<%= @extra.uuid %>").checked = false;
  </script>
<% end %>
